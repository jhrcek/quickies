{
  "permissions": {
    "allow": [
      "Bash(make check:*)",
      "Bash(make test:*)",
      "Bash(make review:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "case \"$CLAUDE_FILE_PATHS\" in *.elm) make check ;; esac"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "elm-test 1>&2"
          }
        ]
      }
    ]
  }
}
